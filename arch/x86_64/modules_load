# Filesystems
MODULES_FS="ext2 ext3 ext4 btrfs reiserfs jfs nfs xfs zfs overlay fuse"

# Crypto
MODULES_CRYPTO="sha1_generic sha256_generic sha512_generic cbc ecb aes_generic aes-x86_64 xts"
